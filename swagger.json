{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "WChallenge",
        "description": "Cryptocurrencies Monitor",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
        {
            "name": "Login-Register",
            "description": "Operaciones basicas de registro y login"
        },
        {
            "name": "Coins",
            "description": "Criptomonedas, tener en cuenta que para consumir estos servicio es necesario agregar el token generado del servicio de login, se debe agregar dando clic en el candado y adicionar la palara Bearer al inicio"
        },
        {
            "name": "Users",
            "description": "Administrador de usuarios, ener en cuenta que para consumir estos servicio es necesario agregar el token generado del servicio de login, se debe agregar dando clic en el candado y adicionar la palara Bearer al inicio"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Login-Register"
                ],
                "summary": "Crear usuario",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Usuario a crear, en el parametro preferred_currency solo se permite alguno de los siguientes valores: eur, usd o ars correspondientes al Euro, Dolar o Peso Argentino",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario creado",
                        "schema": {
                            "$ref": "#/definitions/registerResponse"
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Login",
                "tags": [
                    "Login-Register"
                ],
                "parameters": [
                    {
                        "name": "login",
                        "in": "body",
                        "description": "Para realizar el login se debe ingresar el nombre de usuario y contraseña",
                        "schema": {
                            "$ref": "#/definitions/Login"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario logeado, retorna el token necesario para realizar las démas peticiones",
                        "schema": {
                            "$ref": "#/definitions/loginResponse"
                        }
                    }
                }
            }
        },
        "/coins/coins-list": {
            "get": {
                "summary": "Listar criptomonedas disponibles",
                "tags": [
                    "Coins"
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de criptomonedas",
                        "schema": {
                            "$ref": "#/definitions/coinsResponse"
                        }
                    }
                }
            }
        },
        "/coins/add-coin": {
            "post": {
                "summary": "Agregar criptomoneda a un usuario",
                "tags": [
                    "Coins"
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "coin_id",
                        "in": "body",
                        "description": "Para agregar una criptomoneda se debe ingresar el id obtenido de la lista de criptomonedas",
                        "schema": {
                            "$ref": "#/definitions/addCoin"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Criptomoneda agregada",
                        "schema": {
                            "$ref": "#/definitions/addCoinResponse"
                        }
                    }
                }
            }
        },
        "/users/list-top-coins": {
            "get": {
                "summary": "Listar top N criptomonedas del usuario",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "top",
                        "in": "query",
                        "description": "Número de criptomonedas a mostrar",
                        "type": "number"
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "Manera de ordenar la lista de criptomonedas, solo puede ser alguno de los siguientes valores: asc o desc, por defecto se ordena descendentemente",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista top N de criptomonedas",
                        "schema": {
                            "$ref": "#/definitions/userListCoinsResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "first_name",
                "last_name",
                "user_name",
                "password",
                "preferred_currency"
            ],
            "properties": {
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "user_name": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string"
                },
                "preferred_currency": {
                    "type": "string"
                }
            }
        },
        "Login": {
            "required": [
                "user_name",
                "password"
            ],
            "properties": {
                "user_name": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "loginResponse": {
            "properties": {
                "success": {
                    "type": "boolean"
                },
                "token": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "registerResponse": {
            "properties": {
                "success": {
                    "type": "boolean"
                },
                "user": {
                    "$ref": "#/definitions/User"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "coin": {
            "properties": {
                "symbol": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "image": {
                    "type": "string"
                },
                "last_updated": {
                    "type": "string"
                }
            }
        },
        "coinsResponse": {
            "properties": {
                "success": {
                    "type": "boolean"
                },
                "coins": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/coin"
                    }
                }
            }
        },
        "addCoin": {
            "properties": {
                "coin_id": {
                    "type": "string"
                }
            }
        },
        "addCoinResponse": {
            "properties": {
                "success": {
                    "type": "boolean"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "coinTop": {
            "properties": {
                "symbol": {
                    "type": "string"
                },
                "price_usd": {
                    "type": "number"
                },
                "price_ars": {
                    "type": "number"
                },
                "price_eur": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "image": {
                    "type": "string"
                },
                "last_updated": {
                    "type": "string"
                }
            }
        },
        "userListCoinsResponse": {
            "properties": {
                "success": {
                    "type": "boolean"
                },
                "coins": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/coinTop"
                    }
                }
            }
        }
    }
}