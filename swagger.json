{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "WChallenge",
        "description": "Cryptocurrencies Monitor",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
        {
            "name": "Login-Register",
            "description": "Operaciones basicas"
        },
        {
            "name": "Users",
            "description": "Administrador de usuarios"
        },
        {
            "name": "Coins",
            "description": ""
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"

    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Login-Register"
                ],
                "summary": "Crear usuario",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Usuario a crear, en el parametro preferred_currency solo se permite alguno de los siguientes valores: eur, usd o ars correspondientes al Euro, Dolar o Peso Argentino",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario creado",
                        "schema": {
                            "$ref": "#/definitions/registerResponse"
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Login",
                "tags": [
                    "Login-Register"
                ],
                "parameters": [
                    {
                        "name": "login",
                        "in": "body",
                        "description": "Para realizar el login se debe ingresar el nombre de usuario y contraseña",
                        "schema": {
                            "$ref": "#/definitions/Login"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario logeado, retorna el token necesario para realizar las démas peticiones",
                        "schema": {
                            "$ref": "#/definitions/loginResponse"
                        }
                    }
                }
            }
        },
        "/coins/coins-list": {
            "get": {
                "summary": "Listar Coins disponibles, tener en cuenta que para consumir este servicio es necesario agregar el token generado del servicio de login, se debe agregar dando clic en el candado y adicionar la palara Bearer al inicio",
                "tags": [
                    "Coins"
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de Coins",
                        "schema": {
                            "$ref": "#/definitions/coinsResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "first_name",
                "last_name",
                "user_name",
                "password",
                "preferred_currency"
            ],
            "properties": {
                "first_name": {
                    "type": "string"
                },
                "last_name":  {
                    "type": "string"
                },
                "user_name":  {
                    "type": "string",
                    "uniqueItems": true
                },
                "password":  {
                    "type": "string"
                },
                "preferred_currency": {
                    "type": "string"
                }
            }
        },
        "Login": {
            "required": [
                "user_name",
                "password"
            ],
            "properties": {
                "user_name":  {
                    "type": "string"
                },
                "password":  {
                    "type": "string"
                }
            }
        },
        "loginResponse": {
            "properties": {
                "success":  {
                    "type": "boolean"
                },
                "token":  {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "registerResponse": {
            "properties": {
                "success":  {
                    "type": "boolean"
                },
                "user":  {
                    "$ref": "#/definitions/User"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "coin": {
            "properties": {
                "symbol": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "image": {
                    "type": "string"
                },
                "last_updated": {
                    "type": "string"
                }

            }
        },
        "coinsResponse": {
            "type": "array",
            "$ref": "#/definitions/coin"
        }
    }
}
